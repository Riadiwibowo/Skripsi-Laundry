<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailLaundry"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@drawable/backgroundorderid">

        <TextView
            android:id="@+id/IdX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesanan"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold"
            android:fontFamily="@font/ralewayregular"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/Id"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:text="Order ID"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/ralewayregular"/>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/Status"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/ralewayregular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service:"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewayregular"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:src="@drawable/lineblack"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/orderedfrom"/>
                        <Space
                            android:layout_width="4dp"
                            android:layout_height="0dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ralewayregular"
                            android:text="Info Customer"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Nama Customer"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/ralewayregular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/ralewayregular"/>

                        <TextView
                            android:id="@+id/namaUser"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Nama Customer"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/ralewayregular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="No. Telp"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/ralewayregular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/ralewayregular"/>

                        <TextView
                            android:id="@+id/noTelp"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="No. Telp"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/ralewayregular"/>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:src="@drawable/lineblack"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="4dp">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="26dp"
                            android:src="@drawable/info"/>
                        <Space
                            android:layout_width="4dp"
                            android:layout_height="0dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ralewayregular"
                            android:gravity="center_vertical"
                            android:text="Detail Pemesanan"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="4dp"
                        app:cardCornerRadius="12dp"
                        app:contentPadding="8dp"
                        app:cardElevation="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:visibility="visible"
                                android:id="@+id/detailBaju"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:id="@+id/layoutTotalBaju"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="120dp"
                                        android:layout_height="wrap_content"
                                        android:text="Baju/Others"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/ralewayregular"/>
                                    <Space
                                        android:layout_width="160dp"
                                        android:layout_height="0dp"/>
                                    <TextView
                                        android:id="@+id/subTotalBaju"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="subTotalBaju"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/ralewayregular"/>
                                </LinearLayout>
                                <TextView
                                    android:id="@+id/jumlahbaju"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:text="jumlahBaju"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/ralewayregular"/>
                            </LinearLayout>

                            <LinearLayout
                                android:visibility="visible"
                                android:id="@+id/detailSepatu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:id="@+id/layoutTotalSepatu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="120dp"
                                        android:layout_height="wrap_content"
                                        android:text="Sepatu"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/ralewayregular"/>
                                    <Space
                                        android:layout_width="160dp"
                                        android:layout_height="0dp"/>
                                    <TextView
                                        android:id="@+id/subTotalSepatu"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="subTtlSepatu"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/ralewayregular"/>
                                </LinearLayout>
                                <TextView
                                    android:id="@+id/jumlahsepatu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:text="jumlahSepatu"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/ralewayregular"/>
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:src="@drawable/calculateline"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Total Harga"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewayregular"/>

                    <Space
                        android:layout_width="184dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp."
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewayregular"/>
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="total"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewayregular"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:src="@drawable/lineblack"/>

                <LinearLayout
                    android:id="@+id/layoutPickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:id="@+id/linearPickup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ralewayregular"
                        android:text="Detail Pickup"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Tanggal"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/ralewayregular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/ralewayregular"/>

                        <TextView
                            android:id="@+id/tanggalPickup"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Tanggal"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:textStyle="italic"
                            android:fontFamily="@font/ralewayregular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Jam"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/ralewayregular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/ralewayregular"/>

                        <TextView
                            android:id="@+id/jamPickup"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Jam"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:textStyle="italic"
                            android:fontFamily="@font/ralewayregular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Alamat Pickup"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/ralewayregular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/ralewayregular"/>

                        <TextView
                            android:id="@+id/alamatpickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Alamat Pickup"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:textStyle="italic"
                            android:fontFamily="@font/ralewayregular"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layoutReschedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reschedule"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/ralewayregular"/>

                    <TextView
                        android:id="@+id/editTanggal"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal?"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewayregular"/>

                    <TextView
                        android:id="@+id/editJam"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jam?"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ralewayregular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <android.widget.Button
                        android:id="@+id/btnCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Cancel"
                        android:fontFamily="@font/ralewayregular"
                        android:background="@drawable/backgroundcancel"/>

                    <Space
                        android:id="@+id/space"
                        android:layout_width="12dp"
                        android:layout_height="match_parent"/>

                    <android.widget.Button
                        android:id="@+id/btnAccept"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Accept"
                        android:fontFamily="@font/ralewayregular"
                        android:background="@drawable/buttonsave"/>

                    <Space
                        android:id="@+id/space1"
                        android:layout_width="12dp"
                        android:layout_height="match_parent"/>

                    <android.widget.Button
                        android:id="@+id/btnPickup"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Go Pickup"
                        android:fontFamily="@font/ralewayregular"
                        android:background="@drawable/buttonsave"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>