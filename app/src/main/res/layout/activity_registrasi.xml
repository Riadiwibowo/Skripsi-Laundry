    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ralewayregular"
        android:text="Welcome!"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/belakangregistrasi">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/editrgsfullName"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/edittextrgsshape"
            android:fontFamily="@font/ralewayregular"
            android:hint="Nama Lengkap"
            android:paddingLeft="5dp"
            android:textSize="12dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/belakangregis"
            app:layout_constraintStart_toStartOf="@+id/belakangregis"
            app:layout_constraintTop_toTopOf="@+id/belakangregis" />

        <EditText
            android:id="@+id/editrgsEmail"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:background="@drawable/edittextrgsshape"
            android:fontFamily="@font/ralewayregular"
            android:hint="Email"
            android:paddingLeft="5dp"
            android:textSize="12dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/editrgsTelp"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="155dp"
            android:background="@drawable/edittextrgsshape"
            android:fontFamily="@font/ralewayregular"
            android:hint="Nomor Telepon"
            android:paddingLeft="5dp"
            android:textSize="12dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/belakangregis"
            app:layout_constraintStart_toStartOf="@+id/belakangregis"
            app:layout_constraintTop_toBottomOf="@+id/editrgsEmail" />

        <EditText
            android:id="@+id/editrgsPassword"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="220dp"
            android:background="@drawable/edittextrgsshape"
            android:fontFamily="@font/ralewayregular"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textSize="12dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/belakangregis"
            app:layout_constraintStart_toStartOf="@+id/belakangregis"
            app:layout_constraintTop_toBottomOf="@+id/editrgsTelp" />

        <EditText
            android:id="@+id/editrgsConfirm"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="285dp"
            android:background="@drawable/edittextrgsshape"
            android:fontFamily="@font/ralewayregular"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textSize="12dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/belakangregis"
            app:layout_constraintStart_toStartOf="@+id/belakangregis"
            app:layout_constraintTop_toBottomOf="@+id/editrgsPassword" />

        <Spinner
            android:id="@+id/fidgetSpinner"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/spinnerrgsshape"
            android:paddingLeft="5dp"
            android:spinnerMode="dropdown" />
    </FrameLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#9AD0EC"
        android:fontFamily="@font/ralewayregular"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/belakangregis" />

